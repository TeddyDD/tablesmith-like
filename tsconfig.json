{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["DOM", "ES2021"],
    "types": ["@league-of-foundry-developers/foundry-vtt-types"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "sourceMap": true
  },
  "include": ["src"]
}
